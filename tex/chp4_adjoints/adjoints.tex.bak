        \begin{center}
            \begin{tikzcd}[column sep = 1.4cm, row sep = 1.4cm]
                A & A^Y \times Y \arrow[l, swap,
                "{\textbf{eval}_A}"]\\
                & X \times Y \arrow[ul, "g"] 
                \arrow[u, swap, dashed, "{(h, \text{id}_Y)}"]
            \end{tikzcd}
            \hspace{0.5cm}
            \begin{tikzcd}[column sep = 1.4cm, row sep = 1.4cm]
                A^Y \\
                X \arrow[u, dashed, swap, "h"]
            \end{tikzcd}
            \hspace{1cm}
            \begin{tikzcd}[column sep = 1.4cm, row sep = 1.4cm]
                A & P_Y(E^Y(A)) \arrow[l, swap,
                "{\textbf{eval}_A}"]\\
                & P_Y(X) \arrow[ul, "g"] 
                \arrow[u, swap, dashed, "{(h, \text{id}_Y)}"]
            \end{tikzcd}
            \hspace{0.5cm}
            \begin{tikzcd}[column sep = 1.4cm, row sep = 1.4cm]
